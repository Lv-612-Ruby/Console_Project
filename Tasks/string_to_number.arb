#Kata 7 locker_run

def locker_run x
    (1..Math.sqrt(x)).map { |i| i * i}
  end
  
  def run_task
    print 'Enter total number of lockers:'
    x = gets.chomp.to_i
    puts "Here is an array filled with the locker numbers of
    those which are open at the end of his run : #{locker_run(x)}"
  end
    
      